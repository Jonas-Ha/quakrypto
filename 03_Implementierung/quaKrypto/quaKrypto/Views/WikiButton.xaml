<UserControl x:Class="quaKrypto.Views.WikiButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:quaKrypto"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Button Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left"
              PreviewMouseDown="WikiButton_PreviewMouseDown" PreviewMouseUp="WikiButton_PreviewMouseUp" PreviewMouseMove="WikiButton_PreviewMouseMove"
              BorderBrush="Orange" BorderThickness="25">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
            <Button.Content>
                <Label Margin="-27,-23,-25,-25" Content="Wiki" FontSize="24" FontWeight="Thin"/>
            </Button.Content>
        </Button>
    </Grid>
    
</UserControl>
