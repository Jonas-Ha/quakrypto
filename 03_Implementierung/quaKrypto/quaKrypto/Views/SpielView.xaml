                                    </ListView>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <TabItem Visibility="{Binding InformationUmbenennenVisibility}">
                        <TabItem.Header>
                            <TextBlock TextWrapping="Wrap" ToolTip="Information umbenennen">
                            <InlineUIContainer>
                                <Image Source="../Icons/Spiel/InformationUmbenennen/icons8-signature-24.png" Width="30" Height="30"/>
                            </InlineUIContainer>
                            </TextBlock>
                        </TabItem.Header>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" DockPanel.Dock="Top">
                                <Label Content="Information umbenennen" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Bold"/>
                                <DockPanel Margin="10,0,10,0">
                                    <Border BorderBrush="Black" BorderThickness="1">
                                        <Label Content="Name" FontSize="15"/>
                                    </Border>
                                    <Border BorderBrush="Black" BorderThickness="1">
                                        <TextBox Text="{Binding Informationsname, UpdateSourceTrigger=PropertyChanged}" FontSize="15" VerticalContentAlignment="Center" MaxLength="40" AcceptsTab="False"/>
                                    </Border>
                                </DockPanel>
                                <Border Width="50" Height="50" Margin="10"  BorderBrush="Black" BorderThickness="1">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="../Icons/Spiel/InformationUmbenennen/icons8-signature-24.png" Width="50" Height="50"/>
                                    </StackPanel>
                                </Border>

                                <Border BorderBrush="Black" BorderThickness="1" Margin="10,0,10,0">
                                    <Label Content="Information: " FontSize="15"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Margin="10,0,10,10">
                                    <ListView HorizontalContentAlignment="Stretch" Background="AliceBlue" ItemsSource="{Binding Path=Operand1, UpdateSourceTrigger=PropertyChanged}" FontSize="20" SelectionMode="Single" MinHeight="30"
                        glob:DragDropHelper.IsDragSource="true" glob:DragDropHelper.IsDropTarget="true" ItemTemplate="{StaticResource InfoCraftingFeld}">
                                    </ListView>
                                </Border>

                                <Button HorizontalAlignment="Center" Command="{Binding InformationUmbenennen}" VerticalAlignment="Center" Width="50" Height="50">
                                    <Image Source="../Icons/Spiel/Equal/equal.png" Width="40" Height="40"/>
                                </Button>

                                <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,0">
                                    <Label Content="Ergebnis:" FontSize="15"/>
                                </Border>
                                <Border BorderBrush="Black" BorderThickness="1" Margin="10,0,10,0">
                                    <ListView HorizontalContentAlignment="Stretch" Background="AliceBlue" ItemsSource="{Binding Path=Ergebnis}" FontSize="20" SelectionMode="Single" MinHeight="30"
                        glob:DragDropHelper.IsDragSource="true" glob:DragDropHelper.IsDropTarget="true" ItemTemplate="{StaticResource InfoCraftingFeld}">
                                    </ListView>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Border>

            <Border x:Name="MuelleimerDock" BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="1" Visibility="{Binding SpielVisibility}">
                <DockPanel>
                    <Image DockPanel.Dock="Top" Source="../Icons/Spiel/Muelleimer/icons8-trash-96.png" Width="40" Height="50"/>
                    <ListView HorizontalContentAlignment="Stretch" DockPanel.Dock="Top"  Background="LightGray" ItemsSource="{Binding Path=Muelleimer}" FontSize="20"
                            glob:DragDropHelper.IsDragSource="true" glob:DragDropHelper.IsDropTarget="true">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="x:Information">
                                <Grid Background="{Binding Path=InformationsTyp, Converter={StaticResource InfoFarbenWaehler}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Path=InformationsName}" Grid.Column="0" Margin="10,0,10,0"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <Border x:Name="InformationsablageDock" BorderBrush="Black" BorderThickness="1" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Visibility="{Binding SpielVisibility}">

                <DockPanel>
                    <Label DockPanel.Dock="Top" Content="Informations-Ablage: " FontSize="15"/>
                    <ListView  HorizontalContentAlignment="Stretch" Background="LightGray" ItemsSource="{Binding Path=Informationsablage}" FontSize="20"
                            glob:DragDropHelper.IsDragSource="true" glob:DragDropHelper.IsDropTarget="true" MinHeight="110">
                        <ListView.ItemTemplate>
                            <DataTemplate DataType="x:Information">
                                <Grid Background="{Binding Path=InformationsTyp, Converter={StaticResource InfoFarbenWaehler}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Path=InformationsName}" Grid.Column="0" Margin="10,0,10,0"></TextBlock>
                                    <TextBlock Text="|" Grid.Column="1"></TextBlock>
                                    <TextBlock Text="{Binding Path=InformationsTyp}" Grid.Column="2" Margin="10,0,10,0"></TextBlock>
                                    <TextBlock Text="|" Grid.Column="3"></TextBlock>
                                    <TextBlock Text="{Binding Path=InformationsInhaltToString}" Grid.Column="4" Margin="10, 0, 10, 0"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>
        </Grid>
        <local:WikiButton/>
    </Grid>
</UserControl>