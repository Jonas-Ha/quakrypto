<Window x:Class="quaKrypto.HauptMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:quaKrypto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>


    <!-- 
    Das ist der Wiki-Button
    Bitte schauen, dass er das letzte Element in dem Ganz Großen Grid ist
    Ich weiß nicht, wie es sonst geht, müsste ich mir mal anschauen ._. 
    - Daniel Hannes
    -->
    <Button Width="50" Height="50" VerticalAlignment="Top" HorizontalAlignment="Left"
              PreviewMouseDown="WikiButton_PreviewMouseDown" PreviewMouseUp="WikiButton_PreviewMouseUp" PreviewMouseMove="WikiButton_PreviewMouseMove"
              BorderBrush="Orange" BorderThickness="25">
      <Button.Resources>
        <Style TargetType="Border">
          <Setter Property="CornerRadius" Value="25"/>
        </Style>
      </Button.Resources>
      <Button.Content>
        <Label Margin="-27,-23,-25,-25" Content="Wiki" FontSize="24" FontWeight="Thin"/>
      </Button.Content>
    </Button>
    <!-- Ende Wiki-Button-->
    
    
  </Grid>
</Window>
